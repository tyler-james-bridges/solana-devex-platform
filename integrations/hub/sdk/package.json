{
  "name": "@solana-devex/integration-sdk",
  "version": "1.0.0",
  "description": "Ultra-simple SDK for integrating with the Solana DevEx Platform",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "webpack --mode=production",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir types",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "solana",
    "blockchain",
    "devex",
    "sdk",
    "integration",
    "web3",
    "cryptocurrency"
  ],
  "author": "Solana DevEx Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solana-devex/integration-sdk.git"
  },
  "homepage": "https://solana-devex.com",
  "bugs": {
    "url": "https://github.com/solana-devex/integration-sdk/issues"
  },
  "dependencies": {
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^4.9.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "types/",
    "dist/",
    "README.md"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}