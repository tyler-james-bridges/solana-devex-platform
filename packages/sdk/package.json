{
  "name": "@solana-devex/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the Solana DevEx Platform - CPI debugging, transaction simulation, and developer tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2015 --outDir dist/esm && mv dist/esm/index.js dist/index.esm.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "solana",
    "blockchain",
    "web3",
    "defi",
    "cpi",
    "debugging",
    "transaction",
    "simulation",
    "developer-tools"
  ],
  "author": "Solana DevEx Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solana-devex/platform.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/solana-devex/platform/issues"
  },
  "homepage": "https://onchain-devex.tools",
  "peerDependencies": {
    "@solana/web3.js": "^1.95.0"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}