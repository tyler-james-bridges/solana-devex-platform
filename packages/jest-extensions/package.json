{
  "name": "jest-blockchain-extensions",
  "version": "1.0.0",
  "description": "Jest custom matchers and utilities for Solana blockchain testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "jest",
    "blockchain",
    "solana",
    "testing",
    "matchers",
    "anchor",
    "web3",
    "crypto"
  ],
  "author": "Tyler James Bridges",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@solana/web3.js": "^1.0.0",
    "jest": ">=27.0.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.4.0",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerjames-bridges/jest-blockchain-extensions.git"
  },
  "bugs": {
    "url": "https://github.com/tylerjames-bridges/jest-blockchain-extensions/issues"
  },
  "homepage": "https://github.com/tylerjames-bridges/jest-blockchain-extensions#readme"
