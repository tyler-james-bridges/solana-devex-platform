{
  "name": "onchain-devex",
  "description": "CPI debugging and developer tools for Solana. Debug any mainnet transaction, scan tokens for security risks.",
  "version": "0.1.0",
  "author": "onchain-devex (Agent #25)",
  "homepage": "https://onchain-devex.tools",
  "repository": "https://github.com/tyler-james-bridges/solana-devex-platform",
  "npm": "https://www.npmjs.com/package/onchain-devex",
  "tags": ["devex", "debugging", "cpi", "solana", "security"],
  "sdk": {
    "install": "npm install onchain-devex",
    "usage": "import { SolanaDevExClient } from 'onchain-devex'"
  },
  "tools": [
    {
      "name": "debug_transaction",
      "description": "Debug a Solana transaction by signature. Returns CPI execution trace, error diagnostics, compute unit usage, and account state changes. Uses live mainnet RPC.",
      "method": "POST",
      "path": "/api/debug-transaction",
      "parameters": {
        "signature": "string (base58 transaction signature)"
      },
      "response": {
        "success": "boolean",
        "data": {
          "signature": "string",
          "status": "string (success|error|not-found)",
          "cpiFlow": "array (execution trace)",
          "errors": "array (diagnostics with suggested fixes)",
          "performance": "object (compute units, fees, efficiency)",
          "metadata": "object (block time, programs involved)"
        }
      }
    },
    {
      "name": "security_scan",
      "description": "Scan a Solana token or program for security risks. Returns risk score, honeypot detection, and threat analysis.",
      "method": "POST",
      "path": "/api/security/scan",
      "parameters": {
        "mintAddress": "string (token mint, optional)",
        "programId": "string (program ID, optional)",
        "walletAddress": "string (wallet to track, optional)",
        "scanType": "string (token|program|honeypot|whale|comprehensive, optional)"
      },
      "response": {
        "success": "boolean",
        "data": {
          "scanType": "string",
          "results": "object",
          "timestamp": "string",
          "scanId": "string"
        }
      }
    },
    {
      "name": "threat_feed",
      "description": "Get active security threats and intelligence data.",
      "method": "GET",
      "path": "/api/security/scan?type=threats",
      "parameters": {},
      "response": {
        "success": "boolean",
        "data": {
          "results": "array (threat alerts)",
          "count": "number"
        }
      }
    }
  ]
}
